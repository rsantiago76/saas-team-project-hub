{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "app/**/*", "components/**/*", "lib/**/*", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "amplify", "packages", "apps", "**/*.test.*", "**/*.spec.*"]
}
